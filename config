[core]
  editor=nvim
[init]  
  defaultBranch=main
[gpg]
	program = gpg2
[user]
	useConfigOnly = true
[alias]
  unstage = reset HEAD
  undo-commit = reset --soft HEAD^
  poh = push -u origin HEAD
  pulloh = pull origin HEAD
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
[commit]
	gpgsign = true
	template = ~/.config/git/gitmessage
